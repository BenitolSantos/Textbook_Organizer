<h1>Attractions:</h1>
<% if @user.admin %>
    <%=link_to "New Textbook", new_textbook_path %>
<% end %>



<% @textbooks.each do |textbook| %>
    Title: <%= textbook.name %>
    <% if @user.admin %>
        <%=link_to "Show full contents of #{textbook.name}", textbook_path(textbook) %>
    <% else %>
        <%= link_to "Change page of #{textbook.name}", textbook_path(textbook) %>
    <% end %>
<% end%>

